{
  "designSystem": {
    "name": "LimetaxOS Design System",
    "version": "2.0.0",
    "description": "Modern design system for the LimetaxOS tax advisory platform. Orange primary, cold gray neutrals, dual typography (Manrope + Inter), semantic color system. No secondary accent color — green is reserved for semantic success states only. Dark mode is deprioritized.",
    "tokenFormat": "Dot-notation references (e.g., 'primary.orange.500', 'neutral.gray.200') are semantic aliases — they map to CSS variables in implementation, not JSON paths. Only custom tokens are defined here; standard Tailwind defaults (spacing scale, font sizes, weights, breakpoints) are inherited and not redeclared.",

    "colorPalette": {
      "primary": {
        "orange": {
          "50": "#FFF4ED",
          "100": "#FFE6D5",
          "200": "#FECCAB",
          "300": "#FDAC74",
          "400": "#FF8540",
          "500": "#FF5E00",
          "600": "#CC4B00",
          "700": "#A33C00",
          "800": "#7A2D00",
          "900": "#521E00"
        },
        "description": "Primary brand color — vibrant warm orange used for CTAs, active states, and brand highlights"
      },

      "neutral": {
        "white": "#FFFFFF",
        "gray": {
          "50": "#F9FAFB",
          "100": "#F3F4F6",
          "200": "#E5E7EB",
          "300": "#D1D5DB",
          "400": "#9CA3AF",
          "500": "#6B7280",
          "600": "#4B5563",
          "700": "#374151",
          "800": "#1F2937",
          "900": "#111827"
        },
        "description": "Cold neutral grays (Tailwind gray scale) — the single neutral system for text, backgrounds, borders, and all UI chrome"
      },

      "semantic": {
        "success": {
          "DEFAULT": "#22C55E",
          "bg": "#D1FAE5",
          "text": "#065F46"
        },
        "warning": {
          "DEFAULT": "#EAB308",
          "bg": "#FEF3C7",
          "text": "#92400E"
        },
        "error": {
          "DEFAULT": "#EF4444",
          "bg": "#FEE2E2",
          "text": "#991B1B"
        },
        "info": {
          "DEFAULT": "#3B82F6",
          "bg": "#DBEAFE",
          "text": "#1E40AF"
        },
        "description": "Semantic colors with tint pairs. DEFAULT is the base color, .bg is the light tinted background, .text is the dark foreground for use on .bg"
      },

      "backgrounds": {
        "light": {
          "primary": "neutral.white",
          "secondary": "neutral.gray.50",
          "tertiary": "neutral.gray.100",
          "sidebar": "neutral.gray.100",
          "card": "neutral.white",
          "hover": "neutral.gray.100",
          "grid": "neutral.gray.100"
        },
        "dark": {
          "primary": "#0A0A0A",
          "secondary": "#0F0F0F",
          "tertiary": "#161616",
          "sidebar": "neutral.gray.800",
          "card": "#1A1A1A",
          "hover": "#252B3B",
          "surface": "#1E293B"
        },
        "description": "Background colors for different surface levels. Light mode uses neutral.gray scale. Dark mode is deprioritized — values are cold darks for when it's implemented."
      }
    },

    "typography": {
      "fontFamily": {
        "display": "'Manrope', sans-serif",
        "body": "'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif",
        "mono": "'Geist Mono', 'SF Mono', 'Fira Code', 'Courier New', monospace"
      },

      "textStyles": {
        "display1": {
          "fontFamily": "typography.fontFamily.display",
          "fontSize": "3rem",
          "fontWeight": 700,
          "lineHeight": 1.1,
          "letterSpacing": "-0.02em"
        },
        "h1": {
          "fontFamily": "typography.fontFamily.display",
          "fontSize": "2.25rem",
          "fontWeight": 700,
          "lineHeight": 1.2,
          "letterSpacing": "-0.02em"
        },
        "h2": {
          "fontFamily": "typography.fontFamily.display",
          "fontSize": "1.5rem",
          "fontWeight": 600,
          "lineHeight": 1.3,
          "letterSpacing": "-0.01em"
        },
        "h3": {
          "fontFamily": "typography.fontFamily.display",
          "fontSize": "1.25rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "h4": {
          "fontFamily": "typography.fontFamily.display",
          "fontSize": "1.125rem",
          "fontWeight": 600,
          "lineHeight": 1.4
        },
        "body": {
          "fontFamily": "typography.fontFamily.body",
          "fontSize": "0.875rem",
          "fontWeight": 400,
          "lineHeight": 1.5
        },
        "bodyLarge": {
          "fontFamily": "typography.fontFamily.body",
          "fontSize": "1rem",
          "fontWeight": 400,
          "lineHeight": 1.6
        },
        "caption": {
          "fontFamily": "typography.fontFamily.body",
          "fontSize": "0.75rem",
          "fontWeight": 400,
          "lineHeight": 1.4,
          "color": "neutral.gray.500"
        },
        "label": {
          "fontFamily": "typography.fontFamily.body",
          "fontSize": "0.875rem",
          "fontWeight": 500,
          "lineHeight": 1.4
        }
      }
    },

    "spacing": {
      "_note": "Standard spacing scale inherited from Tailwind defaults. Only app-specific component dimensions defined here.",
      "cardPadding": "1.5rem",
      "cardGap": "1rem",
      "sectionPadding": "2rem",
      "containerMaxWidth": "1280px",
      "sidebarWidth": "260px",
      "sidebarCollapsedWidth": "64px",
      "headerHeight": "3.5rem"
    },

    "borderRadius": {
      "none": "0",
      "xs": "2px",
      "sm": "4px",
      "base": "6px",
      "md": "8px",
      "lg": "10px",
      "xl": "12px",
      "full": "9999px"
    },

    "shadows": {
      "none": "none",
      "sm": "0 1px 0 0 rgba(0, 0, 0, 0.1)",
      "base": "0 2px 8px rgba(0, 0, 0, 0.04)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.02)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025)",
      "xl": "0 8px 24px rgba(0, 0, 0, 0.06)",
      "card": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
    },

    "components": {
      "card": {
        "description": "Versatile card component for displaying grouped information",
        "variants": {
          "default": {
            "background": "neutral.white",
            "borderRadius": "borderRadius.xl",
            "padding": "spacing.cardPadding",
            "boxShadow": "shadows.card",
            "border": "none"
          },
          "outlined": {
            "background": "neutral.white",
            "borderRadius": "borderRadius.xl",
            "padding": "spacing.cardPadding",
            "boxShadow": "none",
            "border": "1px solid neutral.gray.200"
          },
          "elevated": {
            "background": "neutral.white",
            "borderRadius": "borderRadius.xl",
            "padding": "spacing.cardPadding",
            "boxShadow": "shadows.xl",
            "border": "none"
          },
          "dark": {
            "background": "backgrounds.dark.card",
            "borderRadius": "borderRadius.xl",
            "padding": "spacing.cardPadding",
            "boxShadow": "none",
            "border": "1px solid neutral.gray.700"
          }
        },
        "states": {
          "hover": {
            "transform": "translateY(-1px)",
            "boxShadow": "shadows.xl",
            "transition": "animations.transitions.normal"
          }
        }
      },

      "button": {
        "description": "Button component with multiple variants",
        "base": {
          "borderRadius": "borderRadius.md",
          "padding": "0.625rem 1.25rem",
          "fontSize": "0.875rem",
          "fontWeight": 600,
          "fontFamily": "typography.fontFamily.body"
        },
        "variants": {
          "primary": {
            "background": "primary.orange.500",
            "color": "neutral.white"
          },
          "secondary": {
            "background": "neutral.gray.100",
            "color": "neutral.gray.700"
          },
          "dark": {
            "background": "neutral.gray.900",
            "color": "neutral.white"
          },
          "outline": {
            "background": "transparent",
            "color": "neutral.gray.700",
            "border": "1px solid neutral.gray.200"
          },
          "ghost": {
            "background": "transparent",
            "color": "neutral.gray.700"
          }
        },
        "states": {
          "hover": {
            "transition": "animations.transitions.fast",
            "variants": {
              "primary": { "background": "primary.orange.600" },
              "secondary": { "background": "neutral.gray.200" },
              "dark": { "background": "neutral.gray.800" },
              "outline": { "background": "neutral.gray.50" },
              "ghost": { "background": "neutral.gray.100" }
            }
          },
          "disabled": {
            "opacity": 0.5,
            "cursor": "not-allowed"
          }
        }
      },

      "badge": {
        "description": "Badge component for status indicators and labels",
        "base": {
          "borderRadius": "borderRadius.full",
          "padding": "0.125rem 0.5rem",
          "fontSize": "0.75rem",
          "fontWeight": 500
        },
        "variants": {
          "success": {
            "background": "semantic.success.bg",
            "color": "semantic.success.text"
          },
          "warning": {
            "background": "semantic.warning.bg",
            "color": "semantic.warning.text"
          },
          "error": {
            "background": "semantic.error.bg",
            "color": "semantic.error.text"
          },
          "info": {
            "background": "semantic.info.bg",
            "color": "semantic.info.text"
          },
          "neutral": {
            "background": "neutral.gray.100",
            "color": "neutral.gray.700"
          },
          "orange": {
            "background": "primary.orange.50",
            "color": "primary.orange.600"
          }
        }
      },

      "input": {
        "description": "Input field component — subtle resting border (Tacto-inspired), solid orange on focus",
        "default": {
          "background": "transparent",
          "border": "1px solid neutral.gray.200",
          "borderRadius": "borderRadius.base",
          "padding": "0.625rem 0.875rem",
          "fontSize": "0.875rem",
          "fontFamily": "typography.fontFamily.body",
          "color": "neutral.gray.900"
        },
        "states": {
          "focus": {
            "borderColor": "primary.orange.500",
            "boxShadow": "0 0 0 3px rgba(255, 94, 0, 0.08)"
          },
          "error": {
            "borderColor": "semantic.error.DEFAULT",
            "boxShadow": "0 0 0 3px rgba(239, 68, 68, 0.08)"
          },
          "disabled": {
            "background": "neutral.gray.100",
            "color": "neutral.gray.400",
            "cursor": "not-allowed"
          }
        }
      },

      "avatar": {
        "description": "Avatar component for user profiles",
        "sizes": {
          "sm": { "width": "2rem", "height": "2rem" },
          "md": { "width": "2.5rem", "height": "2.5rem" },
          "lg": { "width": "3rem", "height": "3rem" },
          "xl": { "width": "4rem", "height": "4rem" }
        },
        "style": {
          "borderRadius": "borderRadius.full",
          "objectFit": "cover"
        }
      },

      "dropdown": {
        "description": "Dropdown menu component",
        "container": {
          "background": "neutral.white",
          "borderRadius": "borderRadius.md",
          "boxShadow": "shadows.lg",
          "border": "1px solid neutral.gray.200",
          "padding": "0.25rem"
        },
        "item": {
          "padding": "0.5rem 0.75rem",
          "borderRadius": "borderRadius.base",
          "fontSize": "0.875rem",
          "color": "neutral.gray.700"
        },
        "itemHover": {
          "background": "neutral.gray.100"
        }
      },

      "scrollbar": {
        "description": "Custom scrollbar styling",
        "width": "6px",
        "thumbRadius": "3px",
        "light": {
          "thumb": "neutral.gray.300",
          "thumbHover": "neutral.gray.400",
          "track": "transparent"
        },
        "dark": {
          "thumb": "neutral.gray.700",
          "thumbHover": "primary.orange.500",
          "track": "backgrounds.dark.secondary"
        }
      },

      "chat": {
        "description": "Chat message components for AI assistant interface",
        "message": {
          "user": {
            "background": "neutral.gray.100",
            "text": "neutral.gray.900",
            "border": "none",
            "shadow": "none",
            "padding": "1.5rem 1.5rem",
            "borderRadius": "borderRadius.xl",
            "borderRadiusTopRight": "borderRadius.xs",
            "maxWidth": "65%"
          },
          "assistant": {
            "background": "neutral.white",
            "text": "neutral.gray.900",
            "border": "1px solid neutral.gray.200",
            "shadow": "shadows.sm",
            "padding": "1.5rem 2rem",
            "borderRadius": "borderRadius.xl",
            "borderRadiusTopLeft": "borderRadius.xs",
            "maxWidth": "85%"
          }
        },
        "avatar": {
          "size": "2rem",
          "background": "neutral.gray.100",
          "text": "neutral.gray.700",
          "borderRadius": "borderRadius.sm"
        },
        "attachment": {
          "background": "neutral.white",
          "border": "1px solid neutral.gray.200",
          "text": "neutral.gray.600",
          "iconColor": "primary.orange.500",
          "shadow": "shadows.sm",
          "padding": "0.375rem 0.75rem",
          "borderRadius": "borderRadius.sm"
        },
        "timestamp": {
          "text": "neutral.gray.400",
          "fontSize": "0.75rem"
        },
        "gap": {
          "avatarToMessage": "1.25rem",
          "messages": "0.25rem"
        }
      }
    },

    "layouts": {
      "dashboard": {
        "description": "Main dashboard layout — sidebar + content area (grid layout via Tailwind)",
        "sidebar": {
          "width": "spacing.sidebarWidth",
          "background": {
            "light": "neutral.gray.100",
            "dark": "neutral.gray.800"
          }
        },
        "main": {
          "background": {
            "light": "neutral.gray.50",
            "dark": "neutral.gray.900"
          }
        },
        "navigation": {
          "item": {
            "borderRadius": "borderRadius.md",
            "fontSize": "0.875rem",
            "fontWeight": 500,
            "color": "neutral.gray.500"
          },
          "itemActive": {
            "background": {
              "light": "neutral.white",
              "dark": "backgrounds.dark.hover"
            },
            "color": {
              "light": "neutral.gray.900",
              "dark": "neutral.white"
            },
            "fontWeight": 600
          },
          "itemHover": {
            "background": {
              "light": "neutral.gray.200",
              "dark": "backgrounds.dark.hover"
            }
          }
        }
      },

      "header": {
        "description": "Top navigation header bar",
        "height": "spacing.headerHeight",
        "background": {
          "light": "neutral.white",
          "dark": "neutral.gray.900"
        },
        "borderBottom": {
          "light": "1px solid neutral.gray.200",
          "dark": "1px solid neutral.gray.700"
        }
      },

      "gridBackground": {
        "description": "Subtle grid pattern overlay used on content areas",
        "gridSize": "40px",
        "light": {
          "lineColor": "rgba(0,0,0,0.04)"
        },
        "dark": {
          "lineColor": "rgba(255,255,255,0.03)"
        }
      }
    },

    "animations": {
      "transitions": {
        "fast": "0.15s ease-in-out",
        "normal": "0.2s ease-in-out",
        "slow": "0.3s ease-in-out"
      },
      "effects": {
        "fadeIn": {
          "from": { "opacity": 0 },
          "to": { "opacity": 1 },
          "duration": "0.2s"
        },
        "slideUp": {
          "from": { "transform": "translateY(8px)", "opacity": 0 },
          "to": { "transform": "translateY(0)", "opacity": 1 },
          "duration": "0.3s"
        }
      }
    },

    "iconography": {
      "library": "Lucide React (lucide-react)",
      "description": "Tree-shakeable SVG icons. Native to shadcn/ui — all shadcn components use Lucide internally, so no dual-icon-system overhead.",
      "defaultProps": {
        "size": 20,
        "strokeWidth": 1.75
      },
      "sizes": {
        "sm": 16,
        "md": 20,
        "lg": 24,
        "xl": 32
      },
      "usage": "import { IconName } from 'lucide-react'; — each icon is an individual ESM import (~200-400 bytes)"
    },

    "accessibility": {
      "focusRing": {
        "outline": "2px solid primary.orange.500",
        "outlineOffset": "2px"
      },
      "contrast": {
        "minimumRatio": "4.5:1",
        "largeTextRatio": "3:1"
      },
      "interactiveElements": {
        "minTouchTarget": "44px",
        "minClickTarget": "24px"
      }
    },

    "designPrinciples": [
      "Clean, minimal interface with generous whitespace",
      "Dual font system: Manrope for display/headings, Inter for body, Geist Mono for code/technical elements",
      "Orange (#FF5E00) as primary brand accent for CTAs and highlights",
      "Cold gray neutral palette (Tailwind gray scale) — clean, professional, no warm tinting",
      "Light mode first — dark mode deprioritized (cold darks defined for future use)",
      "Tight border radii (4-12px) for a crisp, modern feel",
      "Near-flat design with very subtle shadows — depth through color contrast, not elevation",
      "Sidebar navigation with icon + label pattern",
      "Subtle grid background pattern on content areas",
      "Status indicators using color-coded pill badges",
      "Subtle, low-opacity resting borders on inputs — solid color on focus",
      "Smooth, fast transitions for interactive elements (150-200ms)",
      "Professional and trustworthy aesthetic for financial/tax advisory applications",
      "Lucide icons — native to shadcn/ui, tree-shakeable, consistent 1.75px stroke",
      "Semantic token references — components reference palette keys, not raw hex values"
    ]
  }
}
